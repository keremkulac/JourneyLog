<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.keremkulac.journeylog.presentation.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_journeyFragment"
            app:destination="@id/journeyFragment" />
        <action
            android:id="@+id/action_homeFragment_to_fuelPurchaseFragment"
            app:destination="@id/fuelPurchaseFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/journeyFragment"
        android:name="com.keremkulac.journeylog.presentation.ui.journey.JourneyFragment"
        android:label="fragment_journey"
        tools:layout="@layout/fragment_journey">
        <action
            android:id="@+id/action_journeyFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.keremkulac.journeylog.presentation.ui.map.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" />
    <fragment
        android:id="@+id/fuelPurchaseFragment"
        android:name="com.keremkulac.journeylog.presentation.ui.fuelPurchase.FuelPurchaseFragment"
        android:label="fragment_fuel_purchase"
        tools:layout="@layout/fragment_fuel_purchase">
        <action
            android:id="@+id/action_fuelPurchaseFragment_to_addFuelPurchaseFragment"
            app:destination="@id/addFuelPurchaseFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.keremkulac.journeylog.presentation.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.keremkulac.journeylog.presentation.ui.signup.SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup">
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_signupFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFuelPurchaseFragment"
        android:name="com.keremkulac.journeylog.presentation.ui.addFuelPurchase.AddFuelPurchaseFragment"
        android:label="fragment_add_fuel_purchase"
        tools:layout="@layout/fragment_add_fuel_purchase">
        <action
            android:id="@+id/action_addFuelPurchaseFragment_to_fuelPurchaseFragment"
            app:destination="@id/fuelPurchaseFragment" />
    </fragment>
    <dialog
        android:id="@+id/forgotPasswordFragment"
        android:name="com.keremkulac.journeylog.presentation.ui.forgotPassword.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.keremkulac.journeylog.presentation.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <argument
            android:name="user"
            app:argType="com.keremkulac.journeylog.domain.model.User"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_profileFragment_to_updatePasswordFragment"
            app:destination="@id/updatePasswordFragment" />
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/action_profileFragment_to_vehicleSettingsFragment"
            app:destination="@id/vehicleSelectFragment" />
    </fragment>
    <dialog
        android:id="@+id/updatePasswordFragment"
        android:name="com.keremkulac.journeylog.presentation.ui.updatePassword.UpdatePasswordFragment"
        android:label="fragment_update_password"
        tools:layout="@layout/fragment_update_password" >
        <action
            android:id="@+id/action_updatePasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </dialog>
    <dialog
        android:id="@+id/editProfileFragment"
        android:name="com.keremkulac.journeylog.presentation.ui.editProfile.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile" >
        <argument
            android:name="user"
            app:argType="com.keremkulac.journeylog.domain.model.User"
            app:nullable="true" />
        <action
            android:id="@+id/action_editProfileFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </dialog>
    <fragment
        android:id="@+id/vehicleSelectFragment"
        android:name="com.keremkulac.journeylog.presentation.ui.vehicleSelect.VehicleSelectFragment"
        android:label="fragment_vehicle_select"
        tools:layout="@layout/fragment_vehicle_select" >
    </fragment>

</navigation>